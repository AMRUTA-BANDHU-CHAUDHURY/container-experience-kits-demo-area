ssh_pwauth: yes

chpasswd:
  expire: false 
  list: |
    root:ubuntu
    ubuntu:ubuntu

write_files:
  - owner: ubuntu:ubuntu
    path: /home/ubuntu/setup.sh
    permissions: '0755'
    content: |
      #!/bin/bash

      # Mount cloud-init cdrom
      mkdir /tmp/cdrom
      sudo mount /dev/cdrom /tmp/cdrom

      # Copy .deb packages from cdrom     
      mkdir ~/packages
      cp -r /tmp/cdrom/packages ~/

      # Install .deb dependencies
      cd packages
      chmod a+x install.sh
      ./install.sh
      cd ~

      # Copy Ansible files
      mkdir ~/ansible
      cp -r /tmp/cdrom/ansible  ~/

      # TODO: Run Ansible
      
